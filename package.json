{
  "name": "nodejs-vscode-debug",
  "version": "1.0.0",
  "description": "Node.jsのWebアプリケーションをVSCodeでリモートデバッグする",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc --sourceMap false --removeComments true",
    "build-debug": "tsc --build",
    "clean": "tsc --build --clean",
    "debug": "npm run build-debug && npm run debug:compose && npm run debug:start",
    "debug:compose": "docker-compose up -d --build --force-recreate",
    "debug:start": "docker exec -d nodejs-vscode-debug.worker npm run start-debug",
    "start": "node .",
    "start-debug": "node --inspect=0.0.0.0 .",
    "test": "echo \"Error: no test specified\" && exit 1",
    "watch": "npm-watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/walk8243/nodejs-vscode-debug.git"
  },
  "keywords": [],
  "author": "walk8243",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/walk8243/nodejs-vscode-debug/issues"
  },
  "homepage": "https://github.com/walk8243/nodejs-vscode-debug#readme",
  "dependencies": {
    "express": "^4.17.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.11",
    "@types/node": "^14.14.37",
    "npm-watch": "^0.9.0",
    "typescript": "^4.2.3"
  },
  "watch": {
    "debug": {
      "patterns": [
        "src"
      ],
      "extensions": "ts",
      "quiet": true,
      "silent": true,
      "delay": 500
    }
  }
}
